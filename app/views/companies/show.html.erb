<%- model_class = Company -%>
<div class="page-header">
  <h3><%=t '.title', :default => @company.name %></h3>
</div>

<dl class="dl-horizontal">
  <!-- <dt><strong><%# model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%# @company.name %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @company.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crunchbase_url) %>:</strong></dt>
  <dd><%= @company.crunchbase_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linkedin_url) %>:</strong></dt>
  <dd><%= @company.linkedin_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:glassdoor_url) %>:</strong></dt>
  <dd><%= @company.glassdoor_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter_username) %>:</strong></dt>
  <dd><%= @company.twitter_username %></dd>
  <dt><strong><%= "# of Employees" %>:</strong></dt>
  <dd><%= @company.number_of_employees %></dd>
  <dt><strong><%= model_class.human_attribute_name(:founded_year) %>:</strong></dt>
  <dd><%= @company.founded_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:overview) %>:</strong></dt>
  <dd><%= @company.overview %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_company_path(@company), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              company_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
    <br><br>
  <%= link_to t('.crunchbase', :default => t("helpers.links.crunchbase")),
              company_crunchbase_path(@company), :class => 'btn btn-info' %>
  <%= link_to t('.linkedin', :default => t("helpers.links.linkedin")),
              company_linkedin_path(@company), :class => 'btn btn-info' %>
  <%= link_to t('.glassdoor', :default => t("helpers.links.glassdoor")),
              company_glassdoor_path(@company), :class => 'btn btn-info' %>
</div>
