<%- model_class = Employee -%>
<div class="page-header">
  <h3><%=t '.title', :default => "#{@employee.first_name} #{@employee.last_name}" %></h3>
</div>

<dl class="dl-horizontal">
  <!-- <dt><strong><%# model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%# @employee.first_name %></dd>
  <dt><strong><%# model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%# @employee.last_name %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employee.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @employee.twitter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @employee.phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
